<Window x:Class="StudentsVisitationsWPF.Forms.MonthYearWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsVisitationsWPF.Forms"
        mc:Ignorable="d"
        Title="MonthYearWindow" Height="162" Width="292">
    <Grid>
        <Label Content="Month:" HorizontalAlignment="Left" Margin="35,27,0,0" VerticalAlignment="Top"/>
        <Label Content="Year:" HorizontalAlignment="Left" Margin="35,53,0,0" VerticalAlignment="Top"/>
        <TextBox Name="MonthTextBox" HorizontalAlignment="Left" Margin="83,31,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="YearTextBox" HorizontalAlignment="Left" Margin="75,58,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="128"/>
        <Button Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="105,84,0,0" VerticalAlignment="Top" Height="31" Width="76" Click="SearchButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
