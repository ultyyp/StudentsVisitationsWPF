<Window x:Class="StudentsVisitationsWPF.AddVisitation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsVisitationsWPF"
        mc:Ignorable="d"
        Title="AddVisitation" Height="179" Width="315"
        Loaded="Window_Loaded">
    <Grid>
        <Label Content="Student:" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top"/>
        <DatePicker Name="DATEDatePicker" HorizontalAlignment="Left" Margin="50,82,0,0" VerticalAlignment="Top"/>
        <Label Content="Date:" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.971,0.911"/>
        <Button Name="AddButton" Content="Add Visit" HorizontalAlignment="Left" Margin="167,82,0,0" VerticalAlignment="Top" Height="44" Width="92" Click="AddButton_Click"/>
        <ComboBox Name="ComboBox" HorizontalAlignment="Left" Margin="64,25,0,0" VerticalAlignment="Top" Width="120" />
        <Label Content="Subject:" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="SubjectComboBox" HorizontalAlignment="Left" Margin="64,51,0,0" VerticalAlignment="Top" Width="120" />

    </Grid>
</Window>
