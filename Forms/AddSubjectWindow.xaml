<Window x:Class="StudentsVisitationsWPF.Forms.AddSubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsVisitationsWPF.Forms"
        mc:Ignorable="d"
        Title="AddSubjectWindow" Height="128" Width="244">
    <Grid>
        <Label Content="Subject Name:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="SubjectNameTextBox" HorizontalAlignment="Left" Margin="87,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="110"/>
        <Button Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="87,50,0,0" VerticalAlignment="Top" Height="32" Width="53" Click="AddButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
