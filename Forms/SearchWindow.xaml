<Window x:Class="StudentsVisitationsWPF.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsVisitationsWPF"
        mc:Ignorable="d"
        Title="SearchWindow" Height="139" Width="276">
    <Grid>
        <DatePicker Name="DATEPICKER" HorizontalAlignment="Left" Margin="88,12,0,0" VerticalAlignment="Top"/>
        <Label Content="Date:" HorizontalAlignment="Left" Margin="43,10,0,0" VerticalAlignment="Top"/>
        <Button Name="SearchButton" Content="Search" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top" Height="23" Width="64" Click="SearchButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
