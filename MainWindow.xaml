<Window x:Class="StudentsVisitationsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsVisitationsWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name="InfoGrid" Margin="10,10,10,169" SelectionMode="Single"/>
        <Button Name="ShowStudentsButton" Content="Show Students" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top" Height="45" Width="95" Click="ShowStudentsButton_Click"/>
        <Button Name="ShowVisitationsButton" Content="Show Visitations" HorizontalAlignment="Left" Margin="110,270,0,0" VerticalAlignment="Top" Height="45" Width="95" Click="ShowVisitationsButton_Click"/>
        <Button x:Name="AddStudentButton" Content="Add Student" HorizontalAlignment="Left" Margin="10,320,0,0" VerticalAlignment="Top" Height="45" Width="95" Click="AddStudentButton_Click"/>
        <Button x:Name="AddVisitationButton" Content="Add Visitation" HorizontalAlignment="Left" Margin="110,320,0,0" VerticalAlignment="Top" Height="45" Width="95" Click="AddVisitationButton_Click"/>
        <Button x:Name="GenerateStudentsButton" Content="Generate Students" HorizontalAlignment="Left" Margin="10,370,0,0" VerticalAlignment="Top" Height="45" Width="95" FontSize="10" Click="GenerateStudentsButton_Click" RenderTransformOrigin="-0.365,0.383"/>
        <Button x:Name="GenerateVisitationsButton" Content="Generate Visitations" HorizontalAlignment="Left" Margin="110,370,0,0" VerticalAlignment="Top" Height="45" Width="95" FontSize="10" Click="GenerateVisitationsButton_Click"/>
        <Button x:Name="SearchVisitationButton" Content="Search Visitations" HorizontalAlignment="Left" Margin="210,370,0,0" VerticalAlignment="Top" Height="45" Width="95" FontSize="10" Click="SearchVisitationButton_Click"/>
        <Button x:Name="ClearVisitations" Content="Clear Visitations" HorizontalAlignment="Left" Margin="210,320,0,0" VerticalAlignment="Top" Height="45" Width="95" FontSize="10" Click="ClearVisitations_Click" />
        <Button x:Name="ClearStudents" Content="Clear Students" HorizontalAlignment="Left" Margin="210,270,0,0" VerticalAlignment="Top" Height="45" Width="95" FontSize="10" Click="ClearStudents_Click" />

    </Grid>
</Window>
